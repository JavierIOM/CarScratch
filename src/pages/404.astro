---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - CarScratch" description="Page not found" noIndex={true}>
  <div class="max-w-2xl mx-auto px-4 py-24 text-center">
    <div class="mb-8">
      <svg class="w-24 h-24 mx-auto text-slate-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M9 17l6-6-6-6" />
        <path d="M3 12h18" />
        <circle cx="12" cy="12" r="10" stroke-dasharray="4 2" />
      </svg>
    </div>

    <h1 class="text-5xl font-bold mb-4 text-slate-300">404</h1>
    <p class="text-2xl text-slate-400 mb-2">The journey stops here.</p>
    <p class="text-slate-500 mb-8">Looks like this road doesn't exist. Maybe it's been towed?</p>

    <div class="mb-8">
      <p class="text-slate-500">
        Redirecting to safety in <span id="countdown" class="text-amber-500 font-mono text-xl">10</span> seconds...
      </p>
    </div>

    <a
      href="/"
      class="inline-block px-6 py-3 bg-amber-600 hover:bg-amber-500 text-slate-900 font-medium transition-colors"
    >
      Take Me Home Now
    </a>
  </div>
</Layout>

<script>
  let seconds = 10;
  const countdownEl = document.getElementById('countdown');

  const timer = setInterval(() => {
    seconds--;
    if (countdownEl) {
      countdownEl.textContent = seconds.toString();
    }
    if (seconds <= 0) {
      clearInterval(timer);
      window.location.href = '/';
    }
  }, 1000);
</script>
